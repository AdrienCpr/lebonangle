{% extends 'base.html.twig' %}

{% block title %}AdminUser{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-4xl font-bold mb-4">Admin User Details</h1>

        <table class="table w-full mb-8">
            <tbody>
            <tr>
                <th class="border px-4 py-2">Id</th>
                <td class="border px-4 py-2">{{ admin_user.id }}</td>
            </tr>
            <tr>
                <th class="border px-4 py-2">Username</th>
                <td class="border px-4 py-2">{{ admin_user.username }}</td>
            </tr>
            <tr>
                <th class="border px-4 py-2">Email</th>
                <td class="border px-4 py-2">{{ admin_user.email }}</td>
            </tr>
            <tr>
                <th class="border px-4 py-2">Password</th>
                <td class="border px-4 py-2">{{ admin_user.password }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_admin_user_index') }}" class="text-blue-500 hover:underline">Back to List</a>

        <a href="{{ path('app_admin_user_edit', {'id': admin_user.id}) }}" class="text-green-500 hover:underline ml-4">Edit</a>

        {{ include('admin_user/_delete_form.html.twig') }}
    </div>
{% endblock %}
