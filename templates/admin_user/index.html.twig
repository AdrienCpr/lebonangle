{% extends 'base.html.twig' %}

{% block title %}AdminUser index{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">AdminUser index</h1>

        <table class="table w-full">
            <thead>
            <tr>
                <th class="border p-2">Id</th>
                <th class="border p-2">Username</th>
                <th class="border p-2">Email</th>
                <th class="border p-2">Roles</th>
                <th class="border p-2">Password</th>
                <th class="border p-2">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for admin_user in admin_users %}
                <tr>
                    <td class="border p-2">{{ admin_user.id }}</td>
                    <td class="border p-2">{{ admin_user.username }}</td>
                    <td class="border p-2">{{ admin_user.email }}</td>
                    <td class="border p-2">{{ admin_user.roles ? admin_user.roles|json_encode : '' }}</td>
                    <td class="border p-2">{{ admin_user.password }}</td>
                    <td class="border p-2">
                        <a href="{{ path('app_admin_user_show', {'id': admin_user.id}) }}"
                           class="text-blue-500 hover:underline">Show</a>
                        <a href="{{ path('app_admin_user_edit', {'id': admin_user.id}) }}"
                           class="text-green-500 hover:underline ml-2">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="border p-2">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_admin_user_new') }}"
           class="bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:shadow-outline-blue mt-4 inline-block">Create
            new</a>
    </div>
{% endblock %}
