{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur Le Bon Angle{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-4xl font-bold mb-8">Bienvenue sur Le Bon Angle</h1>

        <div class="mb-8">
            <h2 class="text-2xl font-bold mb-4">Les Dernières Annonces</h2>

            {% for advert in publishedAdverts %}
                <div class="mb-4 p-4 border rounded-md">
                    <h3 class="text-lg font-bold">{{ advert.title }}</h3>
                    <p>{{ advert.content }}</p>
                    <p class="text-gray-700">{{ advert.createdAt|date('d/m/Y H:i') }}</p>
                </div>
            {% endfor %}
        </div>

        <div class="flex justify-between">
            {% if app.user %}
                <a href="{{ path('app_logout') }}" class="bg-red-500 text-white py-2 px-4 rounded-md hover:bg-red-600 focus:outline-none focus:shadow-outline-red">
                    Se Déconnecter
                </a>
            {% else %}
                <a href="{{ path('app_login') }}" class="bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:shadow-outline-blue">
                    Se Connecter
                </a>
            {% endif %}

            <a href="{{ path('app_advert_new') }}" class="bg-green-500 text-white py-2 px-4 rounded-md hover:bg-green-600 focus:outline-none focus:shadow-outline-green">
                Créer une Annonce
            </a>
        </div>
    </div>
{% endblock %}
